<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
<div class="container">
<h1><%= @artist.id ? 'Edit: ' + @artist.name : 'Create New Artist' %></h1>
<br />
<%= form_for [@song, @artist] do |artist| %>
  <div class="form-group">
  <%= artist.label :name %>
  <%= artist.text_field :name, required: true, autofocus: true %>
  </div>
  
  <%= submit_tag("Submit", :id=>"button", :class=>"btn btn-primary", :name=>"submit") %>
  <!-- s.submit  --!>
  <% end %>
  </div>
  </body>